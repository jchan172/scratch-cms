class UsersController < ApplicationController
  def new
    @user = User.new
  end

  def show
    @user = User.find(params[:id])
  end

  def edit
  end
  
  def index
    @users = User.all
  end
  
  def create
    @user = User.new(params[:user])
    if @user.save
      flash[:success] = "Welcome to Jack and Andys CMS!"
      redirect_to @user
    else
      render 'new'
    end
  end
  
  def destroy
    User.find(params[:user]).destroy
  end
end
