<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to '(Your Logo)', root_path, 'data-no-turbolink' => true, :class => "brand" %>
      <div class="nav-collapse collapse" id="main-menu">
        <ul class="nav pull-right" id="main-menu-left">
          <li><%= link_to "About", about_path %></li>
          <% if User.first %>
            <li class="dropdown">
           	  <%= link_to 'Show Me More <b class="caret"></b>'.html_safe, '#', :class => "dropdown-toggle", "data-toggle" => "dropdown" %>
  	          <ul class="dropdown-menu">
                <% User.first.projects.each do |project| %>
                  <% if project.draft == false %>
                    <li>
                      <%= link_to project.title, project %>
                    </li>
                  <% end %>
                <% end %>
                <li class="divider"></li>
                <% User.first.blogs.each do |blog| %>
                  <% if blog.draft == false %>
                    <li>
                      <%= link_to blog.title, blog %>
                    </li>
                  <% end %>
                <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign Up", signup_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>