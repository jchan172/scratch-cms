<% if yield(:title) == 'Home' %> <%# fancy navbar on home page %>
  <div class="navbar transparent navbar-inverse navbar-fixed-top">
<% else %>
  <div class="navbar navbar-inverse navbar-fixed-top">
<% end %>
    <div class="navbar-inner">
    	<div class="container"> 
  			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
  				<span class="icon-bar"></span>
  				<span class="icon-bar"></span>
  				<span class="icon-bar"></span>
  			</button>
        <%= link_to "JACK CHAN logo", root_path, 'data-no-turbolink' => true, :class => "brand" %>
  			<div class="nav-collapse collapse">
  				<ul class="nav pull-right">
  					<li>
  						<%= link_to "About", about_path %>
  					</li>
            <% if User.first %>
              <li class="dropdown">
                <%= link_to 'Projects <b class="caret"></b>'.html_safe, '#', :class => "dropdown-toggle", "data-toggle" => "dropdown"  %>
                <ul class="dropdown-menu">
                  <% User.first.projects.each do |project| %>
                    <li>
                      <%= link_to project.title, project %>
                    </li>
                  <% end %>
                </ul>
              </li>
            <% end %>
  					<% if signed_in? %>
  						<li><%= link_to "Dashboard", '/dashboard' %></li>
  						<li><%= link_to "Sign Out", logout_path, method: :delete %></li>
  					<% else %>
  						<li><%= link_to "Create New Account!", signup_path %></li>
  						<li><%= link_to "Sign In!", login_path %></li>
  					<% end %>
  					
  				</ul>
  			</div>
  		</div>
  	</div>
  </div>