<% provide(:mode, "management") %>
<% provide(:title, "Edit Blog") %>

<div class="container-fluid">
  <div class="row-fluid">
    <%= render 'layouts/sidebar' %>
    <script type="text/javascript">
      $('#blogs-link').removeClass("inactive").addClass("active") // change the "inactive" class to "active"
    </script>
  
    <div class="span8">
      <h1>Edit Title and Description</h1>
        
        <%= form_for(@blog) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :title %>
            <%= f.text_field :title %>

          <div class="redactor_content" data-no-turbolink>
            <%= f.text_area :content, placeholder: "Blog description goes here...", :id => "redactor"%>
          </div>

          <br>

          <div class="draft-checkbox-container">
              <%= f.check_box :draft, :class => "pull-left" %> <%=f.label "Draft", :class => "pull-right" %>
          </div>

          <br>
          <br>

          <%= f.submit "Save", class: "btn btn-large btn-success" %>
        <% end %>

    </div>
  </div>
</div>
