<% provide(:mode, 'management') %>
<% provide(:title, 'Create Blog') %>

<div class="container-fluid">
  <div class="row-fluid">
    <%= render 'layouts/sidebar' %>
    <script type="text/javascript">
      $('#blogs-link').removeClass("inactive").addClass("active") // change the "inactive" class to "active"
    </script>

    <div class="span8">
      <h1>Create a New Blog</h1>

        <%= form_for(@blog) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          
          <%= f.label :title %>
          <%= f.text_field :title %>

          <div class="redactor_box">
            <%= f.text_area :content, placeholder: "Write a description for this blog...", :class => "redactor"%>
          </div>

          <br>

          <%= f.submit "Create Blog", class: "btn btn-large btn-success" %>
        <% end %>

    </div>
  </div>
</div>
