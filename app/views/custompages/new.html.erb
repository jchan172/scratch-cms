<% provide(:mode, 'management') %>
<% provide(:title, 'Create Custom Page') %>

<div class="container-fluid">
  <div class="row-fluid">
    <%= render 'layouts/sidebar' %>
    <script type="text/javascript">
      $('#custompages-link').removeClass("inactive").addClass("active") // change the "inactive" class to "active"
    </script>

    <div class="span8">
      <h1>Create a New Custom Page</h1>

        <%= form_for(@custompage) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          
            <%= f.label :title %>
            <%= f.text_field :title %>

          <div class="redactor_content">
            <%= f.text_area :content, placeholder: "Custom Page content goes here...", :class => "redactor"%>
          </div>

          <br>

          <div class="draft-checkbox-container">
              <%= f.check_box :draft, :class => "pull-left" %> <%=f.label "Draft", :class => "pull-right" %>
          </div>

          <br>
          <br>

          <%= f.submit "Create Custom Page", class: "btn btn-large btn-success" %>
        <% end %>

    </div>
  </div>
</div>
<%# add some space so that footer bar doesn't cover anything %>
